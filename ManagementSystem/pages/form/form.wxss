/* pages/form/form.wxss */
/* 表单 */
page {
  background-color: rgb(238, 238, 238);
  font-size: 30rpx;
}
.merchants_page {
  margin: 50rpx 30rpx;


}
form{
  display: block;
  
 
}

input {
  margin: 18rpx 0;
  padding: 28rpx 0 28rpx 44rpx;
  font-size: 28rpx;
  background-color: white;
}

/* 三级联动样式 */

.section {
  padding-top: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.add_address .container {
  padding: 0;
  /* justify-content: space-between; */
}

.detailed {
  background-color: white;
  margin: 18rpx 0;
  padding: 28rpx 44rpx 28rpx 44rpx;
  font-size: 28rpx;
  overflow: hidden;
  width:88%;
  height: 120rpx;
  z-index: -1;
}

/* 下拉框样式 */

.select_box{
  background: #fff;
  margin: 30rpx auto;
  position: relative;
}
.select{
  box-sizing: border-box;
 
  border:1px solid #efefef;
  border-radius: 8rpx;

  align-items: center;
  padding: 0 20rpx;
  text-align: center;
  background-color: #FBD230;
}
.select_text{
  font-size: 30rpx;

}
.icon{
  padding: 30rpx;
  display: inline-block;
  transform:rotate(90deg);
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 100rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 1;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  text-align: center;
  z-index: 999;
  background-color: white;
}

.qrcode{
  margin: 60rpx 0;
  
 
}
.qrcode image{
  width: 180rpx;
  height: 180rpx;
  display: block;
  margin: 0 auto;
} 

.check{
  display: inline-block;
  color: red;
}

.btn{
  color: white;
  background-color: #09B759;
}
/* 遮罩层 */
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.5;
}
  
/* 弹出层 */
.modalDlg{
    width: 300rpx;
    height: 200rpx;
    position: fixed;
    top: 50px;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    border-radius:5px;
    display: flex;
    flex-direction: column;
    align-items: center;
}
 
 

/* 弹出层里面的文字 */
.text{
  font-size: 28rpx;
  color: #666;
  line-height: 200rpx;
  vertical-align: middle;
}

 .submit{
  text-align: center;
  display: block;
}